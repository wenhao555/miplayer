<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_bar_container"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_marginLeft="8dip">

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_disk_150"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dip"
        android:orientation="vertical"
        android:layout_toRightOf="@id/album_cover"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dip"
            android:lines="1"
            android:layout_marginBottom="3dip"
            android:textColor="@color/md_black"
            android:textSize="12dip"
            android:text="You're beautiful"/>
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dip"
            android:lines="1"
            android:textColor="@color/md_grey_700"
            android:textSize="10dip"
            android:text="James Blunt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_bar_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playbar_btn_playlist"/>

        <ImageView
            android:id="@+id/play_bar_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playbar_btn_play"/>

        <ImageView
            android:id="@+id/play_bar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/playbar_btn_next"/>
    </LinearLayout>

</RelativeLayout>