<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip">

    <ImageView
        android:id="@+id/note_album_cover"
        android:layout_width="63dip"
        android:layout_height="63dip"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_disk_150"/>

    <LinearLayout
        android:layout_toRightOf="@id/note_album_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/single_name"
            android:layout_width="wrap_content"
            android:maxWidth="90dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dip"
            android:hint="Hymn For the weekend"/>

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="wrap_content"
            android:maxWidth="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="8dip"
            android:hint="Alan Walker/Coldplay"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/note_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:src="@drawable/note_btn_play_white"/>

        <ImageView
            android:id="@+id/note_play_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:src="@drawable/note_btn_next_white"/>

        <ImageView
            android:id="@+id/note_lyc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:src="@drawable/note_btn_lyc_white"/>

        <ImageView
            android:id="@+id/note_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:src="@drawable/note_btn_close_white"/>
    </LinearLayout>
</RelativeLayout>